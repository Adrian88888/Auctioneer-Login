@model IEnumerable<Auctioneer.Models.CarBrand>

@{
    ViewData["Title"] = "Admin";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-dark">Administration</h2>
        </div>
    </div>
    <br /><br />

    <div class="row">
        <a class="btn  btn-primary text-light" asp-controller="Admin" asp-action="CarBrands">Edit Car Brands</a> &nbsp;
        <a class="btn  btn-primary text-light" asp-controller="Admin" asp-action="CarFeatures">Edit Car Features</a> &nbsp;
        <a class="btn  btn-primary text-light" asp-controller="UserRoles" asp-action="Index">Edit User Roles</a> &nbsp;
        <a class="btn  btn-primary text-light" asp-controller="Roles" asp-action="Index">Edit Roles</a> &nbsp;
    </div>

    <h1>Car Brands</h1>

    <p>
        <a class="btn btn-success float-right " asp-action="CreateBrand">Add A New Car Brand</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Brand)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Brand)
                    </td>
                    <td>
                        <div class="row float-right">
                            <a class="btn btn-primary" asp-action="EditBrand" asp-route-id="@item.CarBrandID">Edit</a> &nbsp;
                            <a class="btn btn-danger" asp-action="DeleteBrand" asp-route-id="@item.CarBrandID">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>
