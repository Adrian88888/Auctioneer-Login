@model Auctioneer.ViewModels.DummyImageViewModel

@{
    ViewData["Title"] = "Administration";
}

<div class="container p-3">
    <partial name="_AdministrationHeaderPartial" />

    <h1>Upload auction dummy image</h1>
    @if (Model.DummyImage != null)
    {
        <img class="rounded" style="width:300px" src="data:image;base64,@System.Convert.ToBase64String(Model.DummyImage)" asp-append-version="true">
    }
    else
    {
        <p>Please upload a dummy image!</p>
    }
    <form enctype="multipart/form-data" asp-action="Index">
        <div class="form-group">
            <label asp-for="Image" class="control-label"></label>
            <div class="custom-file">
                <input asp-for="Image" class="custom-file-input" id="customFile" accept="image/*" multiple>
                <label class="custom-file-label" for="customFile">Choose file</label>
            </div>
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="submit" class="btn btn-success text-uppercase" />
        </div>
    </form>
</div>