@model IEnumerable<Auctioneer.Models.CarBrand>

@{
    ViewData["Title"] = "Admin";
}

<div class="container p-3">
    <partial name="_AdministrationHeaderPartial" />

    <h1>Car Brands</h1>

    <p>
        <a class="btn btn-success float-right " asp-action="CreateBrand">Add A New Car Brand</a>
    </p>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Brand)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Brand)
                    </td>
                    <td>
                        <div class="row float-right">
                            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.CarBrandID">Edit</a> &nbsp;
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.CarBrandID">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>
