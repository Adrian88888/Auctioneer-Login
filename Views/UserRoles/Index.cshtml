@using Auctioneer.Models
@model List<Auctioneer.ViewModels.UserRolesViewModel>

@{
    ViewData["Title"] = "Admin";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-dark">Administration</h2>
        </div>
    </div>
    <br /><br />

    <div class="row">
        <a class="btn  btn-primary text-light" asp-controller="Admin" asp-action="CarBrands">Edit Car Brands</a> &nbsp;
        <a class="btn  btn-primary text-light" asp-controller="Admin" asp-action="CarFeatures">Edit Car Features</a> &nbsp;
        <a class="btn  btn-primary text-light" asp-controller="UserRoles" asp-action="Index">Edit User Roles</a> &nbsp;
        <a class="btn  btn-primary text-light" asp-controller="Roles" asp-action="Index">Edit Roles</a> &nbsp;
    </div>
    <h1>User Roles</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Email</th>
                <th>Roles</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Email</td>
                    <td>@string.Join(" , ", user.Roles.ToList())</td>
                    <td>
                        <a class="btn btn-primary" asp-controller="UserRoles" asp-action="Manage" asp-route-userId="@user.UserId">Manage Roles</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>