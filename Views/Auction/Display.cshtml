@model Auctioneer.ViewModels.AuctionViewModel
@{
    ViewData["Title"] = "Auction Details";

}
<!-- Page Content -->
<div class="container">

    <!-- Portfolio Item Heading -->
    <h1 class="my-4">
        @Model.Brand    
        @Model.Type
    </h1>

    <!-- Portfolio Item Row -->
    <div class="row">

        <div class="col-md-8">
            @*<img class="img-fluid" src="@("~/Image/"+Model.ImageName)" asp-append-version="true" width="700px" height="700px" alt="">*@
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    @for (var i = 1; i < Model.Images.Count(); i++)
                    {
                        <li data-target="#carouselExampleIndicators" data-slide-to="@i"></li>
                    }
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="@("~/Image/"+Model.Images.FirstOrDefault().ImageName)" asp-append-version="true" width="500px" height="500px" alt="">
                    </div>
                    @*@foreach (var image in Model.Images)
        {
            <div class="carousel-item">
                <img class="d-block w-100" src="@("~/Image/"+image.ImageName)" asp-append-version="true" width="500px" height="500px" alt="">
            </div>
        }*@
                    @for (var i = 1; i < Model.Images.Count; i++)
                    {
                        <div class="carousel-item">
                            <img class="d-block w-100" src="@("~/Image/"+Model.Images[i].ImageName)" asp-append-version="true" width="500px" height="500px" alt="">
                        </div>
                    }
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>

        <div class="col-md-4">
            <h3 class="my-3">Auction Details</h3>
            <ul>
                <li>Auction started: @Model.CreationDate.ToString("dddd dd MMMM yyyy")</li>
                <li>Starting Bid: @Model.Min_bid</li>
                <li>Winning Bid: @Model.Max_bid</li>
                <li>Auction duration: @Model.Duration days</li>
            </ul>
                <h3 class="my-3">Car Description</h3>
                @if (Model.Description != null)
                {
                    <p>@Model.Description</p>
                }
                else
                {
                    <p>No description available.</p>
                }
        </div>

    </div>
    <!-- /.row -->
    <!-- Related Projects Row -->
    <h3 class="my-4">Similar auctions</h3>

    <div class="row">

        <div class="col-md-3 col-sm-6 mb-4">
            <a href="#">
                <img class="img-fluid" src="http://placehold.it/500x300" alt="">
            </a>
        </div>

        <div class="col-md-3 col-sm-6 mb-4">
            <a href="#">
                <img class="img-fluid" src="http://placehold.it/500x300" alt="">
            </a>
        </div>

        <div class="col-md-3 col-sm-6 mb-4">
            <a href="#">
                <img class="img-fluid" src="http://placehold.it/500x300" alt="">
            </a>
        </div>

        <div class="col-md-3 col-sm-6 mb-4">
            <a href="#">
                <img class="img-fluid" src="http://placehold.it/500x300" alt="">
            </a>
        </div>

    </div>
    <!-- /.row -->

</div>
<!-- /.container -->