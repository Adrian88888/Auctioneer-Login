@model IEnumerable<Auctioneer.Models.CarType>

@{
    ViewData["Title"] = "EditBrandModels";
}

<h1>Edit Models</h1>

<p>
    <a class="btn btn-success float-right" asp-action="Create" asp-route-Id="id">Add A New Model</a>
</p>
@if (Model.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    Model
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Type)
                    </td>
                    <td>
                        <div class="row float-right">
                            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.CarTypeID">Edit</a> &nbsp;
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.CarTypeID">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
            else
            {
                <p>There are no car models added for this brand.</p>
            }

<a asp-action="Index" asp-controller="CarType" class="btn btn-primary" style="width:auto">Cancel</a>
